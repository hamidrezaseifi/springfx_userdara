<GridPane alignment="BASELINE_LEFT" hgap="10" prefHeight="600.0" prefWidth="650.0" styleClass="root" vgap="20" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.seifi.springfx_userdara.controllers.UserFormViewController">
    <padding><Insets bottom="5" left="5" right="5" top="5" /></padding>
    <Text style="-fx-padding: 5 10 5 5; -fx-margin: 20 100; -fx-border: 1 solid gray; -fx-font-size: 18; -fx-text-align: center"
          text="User Form" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <GridPane.margin>
            <Insets bottom="10.0" />
        </GridPane.margin></Text>

    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="nameField" prefWidth="550.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <NumberFieldFX fx:id="ageField" prefWidth="550.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <TextField fx:id="locationField" prefWidth="550.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label fx:id="userAdditionInfoLabel" prefHeight="60.0" prefWidth="550.0" style="-fx-padding: 5 10 5 5; -fx-margin-top: 20; -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <GridPane alignment="BASELINE_LEFT" hgap="10" prefWidth="550.0" styleClass="root" vgap="20" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button onAction="#loadUserAdditionInfo" prefWidth="150.0" style="-fx-margin-top: 20;" GridPane.columnIndex="0" GridPane.rowIndex="0">Get Info</Button>
        <Button onAction="#saveUser" prefWidth="150.0" style="-fx-margin-top: 20;" GridPane.columnIndex="1" GridPane.rowIndex="0">Save Data</Button>
        <Button onAction="#loadUsers" prefWidth="150.0" style="-fx-margin-top: 20;" GridPane.columnIndex="2" GridPane.rowIndex="0">Load Data</Button>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <ListView fx:id="usersList" prefHeight="250.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">

    </ListView>

    <columnConstraints>
